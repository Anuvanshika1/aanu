<div class="row">
  <div class="col-md-12">
    <h2>Departments</h2>
    <hr />
    <a href="/departments/add" class="btn btn-success pull-right">Add New
      Department</a>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Department Number</th>
            <th>Department Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each departments}}
            <tr>
              <td>{{departmentId}}</td>
              <td><a
                  href="/department/{{departmentId}}"
                >{{departmentName}}</a></td>
              <td>
                <a
                  href="/departments/delete/{{departmentId}}"
                  class="btn btn-danger"
                >Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
  {{#unless departments}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>